---
import type { Menu } from "~/types/config";
import { cn, removeSlash } from "~/utils/common";

export interface Props {
  menus: Menu[];
  activeKey: string;
  parentUrl: string;
}

const { menus, activeKey, parentUrl } = Astro.props;
---

<div
  class={cn(
    "prose",
    "pt-10 md:pb-0 pb-10",
    "flex w-full flex-col gap-4 px-6 max-w-screen-sm md:max-w-screen-md mx-auto",
    "md:flex-row md:space-x-6 md:space-y-0 md:px-0 pt-14 md:pt-28 md:pb-4"
  )}
>
  {
    menus.map((menu) => {
      return (
        <a
          class={cn(
            "text-xl md:text-2xl no-underline text-default-500 hover:text-primary transition-colors delay-75",
            {
              "text-primary/50": menu.url?.endsWith(activeKey),
            }
          )}
          href={`/${parentUrl}-${removeSlash(menu.url)}/blog`}
        >
          {menu.title}
        </a>
      );
    })
  }
</div>

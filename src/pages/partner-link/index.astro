---
import HomeLayout from "~/layouts/HomeLayout.astro";
import Contact from "~/components/Contact";
import { Config } from "~/config";
---

<HomeLayout
  title="友链"
  description="感谢认识他们"
  file=""
  url=""
  headings={[]}
  frontmatter={{
    file: "",
    url: undefined,
    title: "友链",
    description: "感谢认识他们",
  }}
  rawContent={() => ""}
  compiledContent={() => Promise.resolve("")}
>
  <h1>友链</h1>
  <p>在这里我遇见了新朋友</p>

  <div class="gap-4 flex flex-wrap">
    {
      Config.partnerLinks.map((link) => {
        return (
          <a href={link.url} class="flex gap-2 link link-info">
            <div class="avatar">
              <div class="ring-primary ring-offset-base-100 w-9 rounded-full ring-2 ring-offset-2">
                <img src={link.avatar} alt="avatar" class="!m-0" />
              </div>
            </div>
            {link.name}
          </a>
        );
      })
    }
  </div>
  <div class="w-full pt-40">
    <Contact client:visible />
  </div>
</HomeLayout>
